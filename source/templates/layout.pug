doctype html
html
  head
    link(rel='stylesheet', href='/css/bootstrap.css')
    title #{siteName}
    block scripts
        script(src='/js/jquery.min.js')
        script(src='/js/bootstrap.min.js')
  body

    nav.nav.navbar-default(role='navigation')
      div.container-fluid
        div.navbar-header
          button.navbar-toggle(data-toggle='collapse',data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') #{siteName}
        div.collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
          ul.nav.navbar-nav
            for menuItem in mainMenu
              if (menuItem.subList != null)
                li.dropdown
                  a.dropdown-toggle(href='#',data-toggle='dropdown',role='button',aria-haspopup='true',aria-expanded='false') #{menuItem.name}
                    span.caret
                  ul.dropdown-menu
                    for subMenuItem in menuItem.subList
                      li
                        a(href=subMenuItem.route) #{subMenuItem.name}
              else
                li: a(href=menuItem.route) #{menuItem.name}

    //.header
      //h1.page-title #{siteName}

    .container
    
      .main-content
        block content

