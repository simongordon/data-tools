doctype html
html
  head
    link(rel='stylesheet', href='/css/bootstrap.css')
    title #{siteName}
    block scripts
        script(src='/jquery.min.js')
        script(src='/bootstrap.min.js')
  body

    nav.nav.navbar-default(role='navigation')
      div.container-fluid
        div.navbar-header
          button.navbar-toggle(data-toggle='collapse',data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') #{siteName}
        div.collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
          ul.nav.navbar-nav
            for menuItem in mainMenu
              li: a(href=menuItem.route) #{menuItem.name}

    //.header
      //h1.page-title #{siteName}
    
    .main-content.container
      block content

    .footer
      p Memes
